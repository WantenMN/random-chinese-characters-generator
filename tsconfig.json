{
  "compilerOptions": {
    "sourceMap": false,
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "outDir": "./lib",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.json", "test/**/*.ts"],
  "exclude": ["./*.js"]
}
